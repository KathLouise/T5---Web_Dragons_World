<h1>Listing dragons</h1>

   <% if current_user %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Race</th>
      <th>Gender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% if current_user %>
    <% @dragons.each do |dragon| %>
      <tr>
        <td><%= dragon.id %></td>
        <td><%= dragon.name %></td>
        <td><%= dragon.race %></td>
        <td><%= dragon.gender %></td>
        <td><% if current_user.user_type == "Administrador"  %><%= link_to 'Show', dragon %></td><% end %>
       	<td><% if current_user.user_type == "Administrador" %> <td><%= link_to 'Edit', edit_dragon_path(dragon) %></td><% end %>
        <td><% if current_user.user_type == "Administrador" %> <td><%= link_to 'Destroy', dragon, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user %> 
	<% if current_user.user_type == "Administrador" %> 
		<%= link_to 'New Dragon', new_dragon_path %> 
	<%end %>
<%end %>

    <% end %>
