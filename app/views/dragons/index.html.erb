<main>	
	<article class="information">
		<h2 class="subtitle">Listing dragons</h1>

   		<% if current_user %>
			<table id="grade1" class="grade1">
  				<thead>
    					<tr>
      						<th>ID</th>
      						<th>Name</th>
      						<th>Gender</th>
      						<th colspan="3">Operations</th>
    					</tr>
  				</thead>

  				<tbody>
   					<% if current_user %>
    						<% @dragons.each do |dragon| %>
      							<tr>
        							<td><%= dragon.id %></td>
        							<td><%= dragon.name %></td>
        							<td><%= dragon.gender %></td>
								<td><%= link_to image_tag('/assets/show.png'), dragon %></td>
       								<% if current_user.user_type == "Administrador" %><td><%= link_to image_tag('/assets/edit.png'), edit_dragon_path(dragon) %></td><% end %>
        							<% if current_user.user_type == "Administrador" %><td><%= link_to image_tag('/assets/destroy.png'), dragon, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      							</tr>
    						<% end %>
    					<% end %>
  				</tbody>
			</table>

			<br>

			<% if current_user %> 
				<% if current_user.user_type == "Administrador" %> 
					 <%= link_to image_tag('/assets/new.png'), new_dragon_path %> 
				<%end %>
			<%end %>
    		<% end %>
	</article>
