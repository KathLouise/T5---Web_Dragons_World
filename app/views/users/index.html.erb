<h1>Listing users</h1>

<% if current_user %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>Email</th>
      <th>User type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% if current_user %>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.user_type %></td>
        <td><% if current_user.user_type == "Administrador"  %><%= link_to 'Show', user %></td><% end %>
        <td><% if current_user.user_type == "Administrador"  %><%= link_to 'Edit', edit_user_path(user) %></td><% end %>
        <td><% if current_user.user_type == "Administrador"  %><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
    <% end %>
   </tbody>
</table>

<br>
<% if current_user %>
        <% if current_user.user_type == "Administrador" %>
		<%= link_to 'New User', new_user_path %>
	<% end %>
<% end %>

<% end %>
