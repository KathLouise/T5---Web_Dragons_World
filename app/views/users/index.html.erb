<main>
	<article class="information">
		<h2 class="subtitle">Listing users</h2>
		<% if current_user %>
			<table id="grade1" class="grade1">
  				<thead>
    					<tr>
      						<th>ID</th>
      						<th>Username</th>
      						<th>Email</th>
      						<th>User type</th>
      						<th colspan="3">Operations</th>
    					</tr>
  				</thead>

				<tbody>
					<% if current_user %>
    						<% @users.each do |user| %>
      							<tr>
        							<td><%= user.id %></td>
        							<td><%= user.username %></td>
        							<td><%= user.email %></td>
        							<td><%= user.user_type %></td>
        							<td><%= link_to image_tag('/assets/show.png'), user %></td>
        							<% if current_user.user_type == "Administrador"  %><td><%= link_to image_tag('/assets/edit.png'), edit_user_path(user) %></td><% end %>
        							<% if current_user.user_type == "Administrador"  %><td><%= link_to image_tag('/assets/destroy.png'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      							</tr>
    						<% end %>
    					<% end %>
   				</tbody>
			</table>
			<br>
			<% if current_user %>
        			<% if current_user.user_type == "Administrador" %>
					<%= link_to image_tag('/assets/new.png'), new_user_path %>
				<% end %>
			<% end %>
		<% end %>
	</article>
