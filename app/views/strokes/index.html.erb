<h1>Listing strokes</h1>
<% if current_user %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Dragon</th>
      <th>Name</th>
      <th>Kind</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if current_user %>
    <% @strokes.each do |stroke| %>
      <tr>
        <td><%= stroke.id %></td>
        <td><%= stroke.dragon %></td>
        <td><%= stroke.name %></td>
        <td><%= stroke.kind %></td>
        <td><% if current_user.user_type == "Administrador"  %><%= link_to 'Show', stroke %></td><% end %>
        <td><% if current_user.user_type == "Administrador"  %><%= link_to 'Edit', edit_stroke_path(stroke) %></td><% end%>
        <td><% if current_user.user_type == "Administrador"  %><%= link_to 'Destroy', stroke, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
  </tbody>
 <% end %>
</table>

<br>
<% if current_user %>
        <% if current_user.user_type == "Administrador" %>
		<%= link_to 'New Stroke', new_stroke_path %>

	<% end %>
<% end %>
<% end %>
