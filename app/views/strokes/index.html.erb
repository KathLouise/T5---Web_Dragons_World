<main>
	<article class="information">
		<h2 class="subtitle">Listing strokes</h2>
		<% if current_user %>
			<table id="grade1" class="grade1">
 				<thead>
    					<tr>
      						<th>ID</th>
      						<th>Dragon</th>
      						<th>Name</th>
      						<th>Kind</th>
      						<th colspan="3">Operations</th>
    					</tr>
  				</thead>

  				<tbody>
  					<% if current_user %>
    						<% @strokes.each do |stroke| %>
      							<tr>
        							<td><%= stroke.id %></td>
        							<td><%= stroke.dragon.name %></td>
        							<td><%= stroke.name %></td>
        							<td><%= stroke.kind %></td>
        							<td><%= link_to image_tag('/assets/show.png'), stroke %></td>
        							<% if current_user.user_type == "Administrador"  %><td><%= link_to image_tag('/assets/edit.png'), edit_stroke_path(stroke) %></td><% end%>
        							<% if current_user.user_type == "Administrador"  %><td><%= link_to image_tag('/assets/destroy.png'), stroke, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      							</tr>
    						<% end %>
		 			<% end %>
  				</tbody>
			</table>

			<br>
			<% if current_user %>
        			<% if current_user.user_type == "Administrador" %>
					<%= link_to image_tag('/assets/new.png'), new_stroke_path %>
				<% end %>
			<% end %>
		<% end %>
	</article>
