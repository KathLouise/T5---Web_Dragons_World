<h1>Listing elements</h1>

<% if current_user %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Dragon</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% if current_user %>
    <% @elements.each do |element| %>
      <tr>
        <td><%= element.dragon %></td>
        <td><%= element.name %></td>
        <td><% if current_user.user_type == "Administrador"  %><%= link_to 'Show', element %></td><% end %>
        <td><% if current_user.user_type == "Administrador"  %><%= link_to 'Edit', edit_element_path(element) %></td><% end %>
        <td><% if current_user.user_type == "Administrador"  %><%= link_to 'Destroy', element, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
<br>
<% if current_user %>
        <% if current_user.user_type == "Administrador" %>
		<%= link_to 'New Element', new_element_path %>
	<% end %>
<% end %>
<% end %>
