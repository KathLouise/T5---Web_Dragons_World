<main>
	<article class="information">
		<h2 class="subtitle">Listing clans</h2>
		<% if current_user %>
			<table id="grade1" class="grade1" >
  				<thead>
    					<tr>
      						<th>ID</th>
      						<th>Dragon</th>
      						<th>Clan Name</th>
      						<th>Species</th>
      						<th colspan="3">Operations</th>
    					</tr>
  				</thead>

  				<tbody>
   					<% if current_user %>
    						<% @clans.each do |clan| %>
      							<tr>
        							<td><%= clan.id %></td>
        							<td><%= clan.dragon.name %></td>
        							<td><%= clan.name %></td>
        							<td><%= clan.species %></td>
								<td><%= link_to image_tag('/assets/show.png'), clan %></td>
        							<% if current_user.user_type == "Administrador"  %><td><%= link_to image_tag('/assets/edit.png'), edit_clan_path(clan) %></td><% end %>
        							<% if current_user.user_type == "Administrador"  %><td><%= link_to image_tag('/assets/destroy.png'), clan, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      							</tr>
    						<% end %>
    					<% end %>
  				</tbody>
			</table>

			<br>
			<% if current_user %> 
                		<% if current_user.user_type == "Administrador" %> 
					<%= link_to image_tag('/assets/new.png'), new_clan_path %>
				<%end %>
			<% end %>

		<% end %>
</article>
